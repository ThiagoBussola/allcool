<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-table-review" author="pedro.lobato">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="review"/>
            </not>
        </preConditions>

        <createTable tableName="review">
            <column name="id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="uuid">
            </column>
            <column name="file_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="big decimal">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="review" columnNames="id" constraintName="review_pk"/>
    </changeSet>

    <changeSet id="add-ac_productid_fk" author="pedro.lobato">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="ac_productid_fk" foreignKeyTableName="review"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint baseTableName="review" baseColumnNames="product_id"
                                 constraintName="ac_productid_fk" referencedTableName="product"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="add-ac_fileid_fk" author="pedro.lobato">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="ac_fileid_fk" foreignKeyTableName="review"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint baseTableName="review" baseColumnNames="file_id"
                                 constraintName="ac_fileid_fk" referencedTableName="file"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
